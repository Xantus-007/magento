        <events>
            <controller_action_predispatch_cms_index_index>
                <observers>
                    <dbm_utils>
                        <model>Dbm_Utils_Model_Observer</model>
                        <method>mobileHomePage</method>
                    </dbm_utils>
                </observers>
            </controller_action_predispatch_cms_index_index>
        </events>
    </frontend>-->
    <frontend>
        <routers>
            <utils>
                <use>standard</use>
                <args>
                    <module>Dbm_Utils</module>
                    <frontName>dbm-utils</frontName>
                </args>
            </utils>
        </routers>
    </frontend>
    <admin>
        <routers>
            <dbm_utils_admin>
                <use>admin</use>
                <args>
                    <module>Dbm_Utils_Adminhtml</module>
                    <frontName>dbm-utils-admin</frontName>
                </args>
            </dbm_utils_admin>
            <adminhtml>
                <args>
                    <modules>
                        <Dbm_Utils before="Unirgy_SimpleLicense_Adminhtml">Dbm_Utils_Adminhtml</Dbm_Utils>
                        <Dbm_Utils before="Unirgy_SimpleUpt_Adminhtml">Dbm_Utils_Adminhtml</Dbm_Utils>
                        <Dbm_Utils before="Unirgy_Giftcert_Adminhtml">Dbm_Utils_Adminhtml</Dbm_Utils>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
    <stores>
        <admin>
            <design>
                <theme>
                    <template>monbento</template>
                </theme>
            </design>
        </admin>
    </stores>
</config>