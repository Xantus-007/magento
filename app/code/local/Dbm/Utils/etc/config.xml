<?xml version="1.0"?>
<config>
    <modules>
        <Dbm_Utils>
            <version>0.0.1</version>
        </Dbm_Utils>
    </modules>
    <global>
        <blocks>
            <dbm_utils>
                <class>Dbm_Utils_Block</class>
            </dbm_utils>
        </blocks>
        <helpers>
            <dbm_utils>
                <class>Dbm_Utils_Helper</class>
            </dbm_utils>
            <dbm_country>
                <class>Dbm_Country_Helper</class>
            </dbm_country>
        </helpers>
        <models>
            <dbm_utils>
                <class>Dbm_Utils_Model</class>
            </dbm_utils>
            <paypal>
                <rewrite>
                    <ipn>Dbm_Utils_Model_Rewrite_Paypal_Ipn</ipn>
                </rewrite>
            </paypal>
            <giftpromo>
                <rewrite>
                    <observer>Dbm_Utils_Model_Rewrite_Giftpromo_Observer</observer>
                </rewrite>
            </giftpromo>
        </models>
        <events>
            <clean_media_cache_after>
                <observers>
                    <dbm_utils>
                        <type>singleton</type>
                        <class>Dbm_Utils_Model_Observer</class>
                        <method>afterCacheHandler</method>
                    </dbm_utils>
                </observers>
            </clean_media_cache_after>
            <controller_action_predispatch>
                <observers>
                    <s3ibusiness_giftpromo_addgift>
                        <type>singleton</type>
                        <class>giftpromo/observer</class>
                        <method>addGifts</method>
                    </s3ibusiness_giftpromo_addgift>
                </observers>
            </controller_action_predispatch>
            <sales_order_payment_cancel>
                <observers>
                    <dbm_couponfix_observer>
                        <type>singleton</type>
                        <class>Dbm_Utils_Model_Observer</class>
                        <method>cancelCouponFix</method>
                    </dbm_couponfix_observer>
                </observers>
            </sales_order_payment_cancel>   
        </events>
    </global>
