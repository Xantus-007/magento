<config>
    <tabs>
        <dbm>
            <label>DBM - Modules</label>
            <sort_order>100</sort_order>
        </dbm>
    </tabs>
    <sections>
        <dbm_seo>
            <label>Paramètres SEO</label>
            <tab>dbm</tab>
            <sort_order>1000</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <defaultseo>
                    <label>Paramètres SEO</label>
                    <sort_order>100</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <expanded>1</expanded>
                    <fields>
                        <forcecanonical translate="label">
                            <label>Activer la redirection canonical pour les produits</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </forcecanonical>
                        <parentcategoryurl translate="label">
                            <label>Afficher la catégorie parente dans l'URL des sous catégories</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </parentcategoryurl>
                        <seopagination_enabled translate="label">
                            <label>Ajouter les link rel="next" et rel="prev" pour les catégories</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </seopagination_enabled>
                    </fields>
                </defaultseo>
                <meta_description translate="label">
                    <label>META Description</label>
                    <sort_order>200</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <expanded>1</expanded>
                    <fields>
                        <category translate="label">
                            <label>Page catégorie</label>
                            <comment>ou [CATEGORIE] est la variable correspondant au nom de la catégorie et [H1 CATEGORIE] est la variable correspondant au h1 de la catégorie (attribut de catégorie meta_keywords)</comment>
                            <frontend_type>textarea</frontend_type>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </category>
                        <product translate="label">
                            <label>Page produit</label>
                            <comment>ou [PRODUIT] est la variable correspondant au nom du produit, et [CATEGORIE] est la variable correspondant au nom de la catégorie du produit</comment>
                            <frontend_type>textarea</frontend_type>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </product>
                        <cms translate="label">
                            <label>Page CMS</label>
                            <comment>ou [TITLE] est la variable correspondant au titre de la page</comment>
                            <frontend_type>textarea</frontend_type>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </cms>
                    </fields>
                </meta_description>
                <meta_title translate="label">
                    <label>META Title</label>
                    <sort_order>300</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <expanded>1</expanded>
                    <fields>
                        <category translate="label">
                            <label>Page catégorie</label>
                            <comment>ou [CATEGORIE] est la variable correspondant au nom de la catégorie et [H1 CATEGORIE] est la variable correspondant au h1 de la catégorie (attribut de catégorie meta_keywords)</comment>
                            <frontend_type>textarea</frontend_type>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </category>
                        <product translate="label">
                            <label>Page produit</label>
                            <comment>ou [PRODUIT] est la variable correspondant au nom du produit</comment>
                            <frontend_type>textarea</frontend_type>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </product>
                        <cms translate="label">
                            <label>Page CMS</label>
                            <comment>ou [TITLE] est la variable correspondant au titre de la page</comment>
                            <frontend_type>textarea</frontend_type>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </cms>
                    </fields>
                </meta_title>
                <alt_tag translate="label">
                    <label>Balises ALT</label>
                    <sort_order>400</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <expanded>1</expanded>
                    <fields>
                        <product_image translate="label">
                            <label>Image produit</label>
                            <comment>ou [PRODUIT] est la variable correspondant au nom du produit, et [CATEGORIE] est la variable correspondant au nom de la catégorie du produit</comment>
                            <frontend_type>textarea</frontend_type>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </product_image>
                    </fields>
                </alt_tag>
                <audit>
                    <label>Check préco ref</label>
                    <sort_order>500</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <expanded>1</expanded>
                    <fields>
                        <redirectindex translate="label">
                            <label>Test redirection /index.php vers /</label>
                            <frontend_type>button</frontend_type>
                            <frontend_model>dbm_seo/checkredirectindex</frontend_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </redirectindex>
                    </fields>
                </audit>
            </groups>
        </dbm_seo>
    </sections>
</config>