<?xml version="1.0" ?>
<config>
    <tabs>
        <dbm>
            <label>DBM - Modules</label>
            <sort_order>200</sort_order>
        </dbm>
    </tabs>
    <sections>
        <dbm_modal>
            <label>Paramètres Modal Add To Cart</label>
            <sort_order>200</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <tab>dbm</tab>
            <groups>
                <defaultmodal translate="label">
                    <label>Général</label>
                    <comment></comment>
                    <sort_order>10</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <showfranco translate="label">
                            <label>Activer le message des franco dans la modal</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </showfranco>
                        <helperfranco translate="label comment">
                            <label>Nom du Helper pour la fonction de calcul des franco</label>
                            <frontend_input>text</frontend_input>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </helperfranco>
                    </fields>
                </defaultmodal>
            </groups>
        </dbm_modal>
    </sections>
</config>