<?xml version="1.0"?>
<config>
  <modules>
    <Altiplano_Ngroups>
      <version>0.1.0</version>
    </Altiplano_Ngroups>
  </modules>
  <frontend>
    <routers>
      <ngroups>
        <use>standard</use>
        <args>
          <module>Altiplano_Ngroups</module>
          <frontName>ngroups</frontName>
        </args>
      </ngroups>
    </routers>
    <layout>
      <updates>
        <ngroups>
          <file>ngroups.xml</file>
        </ngroups>
      </updates>
    </layout>
    </frontend>
    <admin>
      <routers>
			  <ngroups>
				  <use>admin</use>
				  <args>
					  <module>Altiplano_Ngroups</module>
					  <frontName>ngroups</frontName>
				  </args>
			  </ngroups>
      </routers>
    </admin>
    <adminhtml>
    	<translate>
				<modules>
        	<Altiplano_Ngroups>
          	<files>
            	<default>Altiplano_Ngroups.csv</default>
     	     </files>
      	  </Altiplano_Ngroups>
				</modules>
			</translate>
			<menu>
	      <newsletter>
				  <children>
    	      <ngroups module="ngroups">
      	      <title>Newsletter Users Groups</title>
        	    <sort_order>71</sort_order>
          	  <action>ngroups/adminhtml_ngroups</action>
          	</ngroups>
   	     </children>
    	  </newsletter>
    	</menu>
			<acl>
				<resources>
					<all>
						<title>Allow Everything</title>
					</all>
					<admin>
						<children>
      	      <newsletter>
        	      <children>
          	      <ngroups module="ngroups">
            	      <title>Newsletter Users Groups</title>
              	  </ngroups>
           		  </children>
	            </newsletter>
  	        </children>
					</admin>
				</resources>
			</acl>
			<layout>
				<updates>
					<ngroups>
						<file>ngroups.xml</file>
					</ngroups>
				</updates>
			</layout>
  	</adminhtml>
  <global>
    <rewrite>
      <ngroups_adminhtml_newsletter_queue>
        <from><![CDATA[#^/admin/newsletter_queue/#]]></from>
        <to>/ngroups/adminhtml_newsletter_queue/</to>
      </ngroups_adminhtml_newsletter_queue>
    </rewrite>
    <models>
      <newsletter_mysql4>
        <rewrite>
          <queue>Altiplano_Ngroups_Model_Mysql4_Queue</queue>
        </rewrite>
      </newsletter_mysql4>
      <ngroups>
        <class>Altiplano_Ngroups_Model</class>
        <resourceModel>ngroups_mysql4</resourceModel>
      </ngroups>
      <ngroups_mysql4>
        <class>Altiplano_Ngroups_Model_Mysql4</class>
        <entities>
          <ngroups>
            <table>ngroups</table>
          </ngroups>
        </entities>
      </ngroups_mysql4>
    </models>
    <resources>
      <ngroups_setup>
        <setup>
          <module>Altiplano_Ngroups</module>
        </setup>
        <connection>
          <use>core_setup</use>
        </connection>
      </ngroups_setup>
      <ngroups_write>
        <connection>
          <use>core_write</use>
        </connection>
      </ngroups_write>
      <ngroups_read>
        <connection>
          <use>core_read</use>
        </connection>
      </ngroups_read>
    </resources>
    <blocks>
      <ngroups>
        <class>Altiplano_Ngroups_Block</class>
      </ngroups>
      <adminhtml>
        <rewrite>
          <newsletter_template_edit_form>Altiplano_Ngroups_Block_Adminhtml_Newsletter_Template_Edit_Form</newsletter_template_edit_form>
          <newsletter_queue_edit_form>Altiplano_Ngroups_Block_Adminhtml_Newsletter_Queue_Edit_Form</newsletter_queue_edit_form>
        </rewrite>
      </adminhtml>
    </blocks>
    <helpers>
      <ngroups>
        <class>Altiplano_Ngroups_Helper</class>
      </ngroups>
    </helpers>
  </global>
</config>