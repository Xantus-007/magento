<?xml version="1.0"?>
<config>
    <modules>
        <Monbento_Bundle>
            <version>0.1.0</version>
        </Monbento_Bundle>
    </modules>
    <global>
        <helpers>
            <monbento_bundle>
                <class>Monbento_Bundle_Helper</class>
            </monbento_bundle>
        </helpers>
        <blocks>
            <bundle>
                <rewrite>				
                    <checkout_cart_item_renderer>Monbento_Bundle_Block_Checkout_Cart_Item_Renderer</checkout_cart_item_renderer>
                    <catalog_product_view_type_bundle_option_select>Monbento_Bundle_Block_Catalog_Product_View_Type_Bundle_Option_Select</catalog_product_view_type_bundle_option_select>
                    <sales_order_items_renderer>Monbento_Bundle_Block_Sales_Order_Items_Renderer</sales_order_items_renderer>
                </rewrite>
            </bundle>
        </blocks>
        <models>
            <bundle>
                <rewrite>	
                    <product_type>Monbento_Bundle_Model_Product_Type</product_type>			
                </rewrite>
            </bundle>
        </models>
    </global>

    <frontend>
        <routers>
            <bundle>
                <use>standard</use>
                <args>
                    <module>Monbento_Bundle</module>
                    <frontName>bundle</frontName>
                </args>
            </bundle>
        </routers>   
        <product>
            <collection>
                <attributes>
                    <name />
                    <url_key />
                    <price />
                    <special_price />
                    <special_from_date />
                    <special_to_date />
                    <short_description />
                    <thumbnail />
                    <small_image />
                    <image_label />
                    <thumbnail_label />
                    <small_image_label />
                    <tax_class_id />
                    <status />
                    <news_from_date />
                    <news_to_date />
                    <created_at />
                    <updated_at />
                    <image_bundle_1 />
                    <image_bundle_2 />
                    <image_bundle_3 />
                    <color_hexa />
                    <image_bundle_motif />
                </attributes>
            </collection>
        </product>

    </frontend>
</config>