<?php $categoryImage = Mage::registry('current_category')->getImage(); ?>
<?php $slides = $this->getSlides(); ?>
<?php if(count($slides) > 0): ?>
<div class="js-bxslider">
    <?php $i=0;foreach($slides as $slide): ?>
    <div class="c-page__custom__slider__item">
        <div style="background-image: url(<?php echo Mage::helper('dbm_utils/image')->resizeImage('media/post/image' . $slide->getImage(), 1440, 410, array('constrainOnly' => true, 'mode' => 'inner_resize', 'keepFrame' => false, 'useAdaptive' => true)); ?>);" class="c-bkg--large"></div>
        <?php if($slide->getImageMobile()): ?>
        <div style="background-image: url(<?php echo Mage::helper('dbm_utils/image')->resizeImage('media/post/image' . $slide->getImageMobile(), 600, 1200, array('constrainOnly' => true, 'mode' => 'inner_resize', 'keepFrame' => false, 'useAdaptive' => true)); ?>);" class="c-bkg--small"></div>
        <?php endif; ?>
        <div class="c-product">
            <img src="<?php echo Mage::getBaseUrl() . 'media/catalog/category/' . $categoryImage ?>" alt="<?php echo Mage::registry('current_category')->getName() ?>">
        </div>
    </div>
    <?php $i++;endforeach; ?>
</div>
<?php endif; ?>
