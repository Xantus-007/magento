<?php $blocs = $this->getBlocsPresse(); ?>
<?php if(count($blocs) > 0): ?>
    <?php $i=0;foreach($blocs as $bloc): ?>
    <div class="c-press__item <?php if($bloc->getPresseTypeTv()) echo 'is-video'; ?>"> 
        <div class="row">                   
            <div class="column large-4 medium-6 <?php if($i%2 == 0): ?>medium-push-4<?php else: ?>large-push-4 medium-push-2<?php endif; ?>">
                <div class="c-press__content">
                    <div class="c-press__image">
                        <img src="<?php echo ($bloc->getPresseTypeTv()) ? Mage::helper('dbm_utils/image')->resizeImage('media/post/image' . $bloc->getImage(), 395, 312) : Mage::helper('dbm_utils/image')->resizeImage('media/post/image' . $bloc->getImage(), 395, 395); ?>" alt="<?php echo ($bloc->getImageAlt()) ? $bloc->getImageAlt() : 'Monbento : ' . $bloc->getPostTitle(); ?>" />
                    </div>
                    <div class="c-press__year"><?php echo $bloc->getData('texte_2'); ?></div>
                    <div class="c-press__source"><?php echo $bloc->getPostTitle(); ?></div><a href="<?php echo $bloc->getData('href'); ?>" class="c-press__title"><?php echo $bloc->getPostContent(); ?></a>
                </div>
            </div>
        </div>
    </div>
    <?php $i++;endforeach; ?>
<?php endif; ?>