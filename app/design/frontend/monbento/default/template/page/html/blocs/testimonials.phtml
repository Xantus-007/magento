<?php $blocs = $this->getTestimonials(); ?>
<?php $class = ($this->helper('monbento_site')->isHomePage()) ? 'home' : 'about'; ?>
<?php if(count($blocs) > 0): ?>
<section class="c-testimonial--<?php echo $class; ?> o-section--bkgGrey js-test">
    <div class="c-title--group">
        <div class="c-main"><?php echo Mage::getStoreConfig('monbento_admin_wysiwyg/monbento_config_string/bloc_home_temoignages'); ?></div>
        <div class="c-baseline<?php if(!$this->helper('monbento_site')->isHomePage()) echo ' c-about__baseline'; ?>"><?php echo Mage::getStoreConfig('monbento_admin_wysiwyg/monbento_config_string/bloc_home_temoignages_subtitle'); ?></div>
    </div>
    <div class="row">
        <?php foreach($blocs as $bloc): ?>
        <div class="columns medium-4 c-testimonial--holder">
            <div class="c-testimonial__item">
                <div class="c-title">
                    <div class="o-table">
                        <div class="o-table__cell--valignMiddle"><?php echo $bloc->getPostTitle(); ?></div>
                    </div>
                </div>
                <div class="c-content">
                    <div class="c-icon">
                        <img src="<?php echo $this->getBaseUrl().'media/post/image' . $bloc->getImage() ?>" alt="<?php echo ($bloc->getImageAlt()) ? $bloc->getImageAlt() : 'Monbento : ' . $bloc->getPostTitle(); ?>">
                    </div>
                    <div class="c-desc js-itemEqualizer">
                        <div class="o-table">
                            <div class="o-table__cell--valignMiddle--tabletDown"><?php echo $bloc->getPostContent(); ?></div>
                        </div>
                    </div>
                </div>
                <?php if($class == 'home'): ?>
                <div class="c-quote js-itemEqualizer">
                    <div class="o-table">
                        <div class="o-table__cell--valignMiddle">
                            «
                            <?php echo $bloc->getPostExcerpt(); ?>
                            ».
                        </div>
                    </div>
                </div>
                <div class="c-avatar">
                    <div class="c-thumb">
                        <img src="<?php echo $this->getBaseUrl().'media/post/image' . $bloc->getImagePersonne() ?>" alt="">
                    </div>
                    <div class="c-author"><?php echo $bloc->getNomTemoin(); ?></div>
                </div>
                <?php endif; ?>
            </div>
        </div>
        <?php endforeach; ?>
    </div>
</section>
<?php endif; ?>