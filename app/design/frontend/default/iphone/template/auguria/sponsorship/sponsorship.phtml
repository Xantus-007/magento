<script type="text/javascript">
//<![CDATA[
    var i=1;
    var recipCount  = 1;
    var maxRecip    = <?php echo $this->getMaxRecipients() ?>;
    function remove_recipient(i){
        $('recipient_firstname'+i).up(2).remove();
        recipCount = recipCount-1;
        if(recipCount<=maxRecip && maxRecip != 0) {
            $('add_recipient_button').show();
            $('max_recipient_message').hide();
        }
        return false;
    }

    function add_recipient(firstname, lastname, email){
    	if(maxRecip == 0 || recipCount<=maxRecip)
    	{
	        ul = $('recipient_options_wrapper');
	        var li_mail = Element.extend(document.createElement("LI"));
	        li_mail.addClassName('addElement');
	
	        li_mail.innerHTML = '<div class="left" style="width:100%; clear:both; display:block;"><label for="recipient_firstname" class="required" style="float:left;"><?php echo $this->__('First name:') ?><em>*<\/em><\/label><div style="width:240px;float:right"><input name="recipient[firstname][]" type="text" class="input-text uniform-input required-entry" id="recipient_firstname'+i+'" value="'+firstname+'" style="width:250px;" /><\/div><\/div>';
	        li_mail.innerHTML += '<div class="right" style="width:100%; clear:both; display:block;"><label for="recipient_lastname" class="required" style="float:left;"><?php echo $this->__('Last name:') ?><em>*<\/em><\/label><div style="width:240px;float:right"><input name="recipient[lastname][]" value="'+lastname+'" type="text" class="input-text uniform-input required-entry" id="recipient_lastname'+i+'" style="width:250px;" /><\/div><\/div>';
	        li_mail.innerHTML += '<div class="left" style="width:100%; clear:both; display:block;"><label for="recipient_email" class="required" style="float:left;"><?php echo $this->__('Email Address:') ?><em>*<\/em><\/label><div style="width:240px;float:right"><input name="recipient[email][]" value="'+email+'" title="<?php echo $this->__('Email Address') ?>" id="recipient_email'+i+'" type="text" class="input-text uniform-input required-entry validate-email" style="width:250px;" /><\/div><\/div>';
	
	        li_mail.innerHTML += '<button style="margin-top:10px" class="button right" onclick="remove_recipient('+i+');" type="button"><span><span><?php echo $this->__('Remove Recipient') ?><\/span><\/span><\/button>';
	        i++;
	        recipCount++;
	        if(recipCount>maxRecip && maxRecip != 0) {
	            $('add_recipient_button').hide();
	            $('max_recipient_message').show();
	        }
	
	        ul.appendChild(li_mail);
    	}
    	else
    	{
            $('add_recipient_button').hide();
            $('max_recipient_message').show();
    	}
    }
//]]>
</script>

