$offset = $this->getOffset();
$limit = $this->getLimit();

$fbPosts = $this->getFacebookItemsFeed($offset, $limit);
?>
<?php if(count($fbPosts) > 0 && Mage::getStoreConfig('dbm_feeds_config/facebook_config_general/facebook_enable')): ?>
<!-- Facebook -->
<div class="c-section__facebook">
    <p class="titleactuhome">
	<span><img src="<?php echo $this->getSkinUrl('images/c-icon__facebook.png') ?>"></span><br><br>
	<span><?php echo $this->__('Facebook') ?></span>
    </p>
    <div class="c-facebook clearfix">
        <?php foreach($fbPosts as $post): ?>
	<div class="c-facebook__item">
            <div class="c-facebook__hover"></div>
            <div class="c-facebook__date"><?php echo Mage::helper('socialfeeds')->formatDate( $post['created_time'] ) ?></div>
            <div class="c-facebook__text"><?php echo Mage::helper('socialfeeds')->formatPost( $post['message'] ) ?></div>
        </div>
        <?php endforeach; ?>
    </div>
</div>
<?php endif; ?>
