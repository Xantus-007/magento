//- layout
extends _components-layout

//- settings
append vars
    - var pageTitle = 'Monbento : page checkout utils'
    - var pageClass = ''
    - var pageColor = ''
    - var pageType = ''

append body
    h1.c-title--page: .row: .columns Régler mes achats

    .c-checkout__content
        .row
            .columns.small-10.small-centered.js-list__radio
                .s_method_socolissimo
                    .row
                        .columns.text-center
                            .c-title--sub Choisissez votre mode de livraison
                    .row
                        .columns.large-6
                            h3 À votre domicile
                            .c-box__input
                                ul.c-list__radio--three
                                    - var icons = ['chronopost', 'gls', 'soColissimo']
                                    - var titles = ['Chronopost', 'GLS', 'Chez vous en So Colissimo contre signature.']
                                    - var descsStrong = ['Livraison express en 24H', 'Avec signature', 'Personal delivery to the chosen address.']
                                    - var descs = ['Merci de passer commande avant 12h00', 'Livraison à l’adresse de votre choix.', 'If the delivery cannot be done, your package will be made available at the closest Post office.']

                                    each icon, index in icons
                                        li
                                            mixin radio-inline(descsStrong[index], descs[index], index, icon, titles[index], 'delivery')

                        .columns.large-6
                            h3 Dans un point relais
                            .c-box__input
                                ul.c-list__radio--four
                                    - var icons = ['relaisPickUp', 'relaisPoste', 'gls', 'pointRelais']
                                    - var titles = ['Dans votre point relais Cityssimo', 'Dans le bureau de poste de votre choix', 'Chez votre commerçant point relais', 'GLS relais']
                                    - var descsStrong = ['', '', '', '']
                                    - var descs = ['Livraison dans l\'une des 31 consignes automatiques Cityssimo 7j/7 et 24h/24.', 'Livraison dans l\'un des 10 000 points de retrait La Poste de votre choix en France.', 'Livraison dans l\'un des 3 700 commerces du réseau PICKUP, Groupe La Poste.', 'Livraison dans un point relais GLS.']

                                    each icon, index in icons
                                        li
                                            mixin radio-inline(descsStrong[index], descs[index], index, icon, titles[index], 'relay')

        .row
            .columns.large-8.small-10.small-centered
                .row
                    .columns.text-center
                        .c-title--sub Choisissez votre mode de paiement

                .row
                    .c-box__input
                        ul.c-list__radio--auto
                            - var icons = ['amex', 'bankcheck', 'cb', 'masterCard', 'paypal', 'visa']
                            - var titles = ['Carte Bancaire', 'Chèque', 'Carte Bancaire', 'Carte Bancaire', 'Paypal', 'Carte Bancaire']
                            - var descsStrong = ['', '', '', '', '', '']
                            - var descs = ['', '', '', '', 'Vous allez être redirigé vers le site PayPal lorsque vous confirmerez votre commande.', ' Votre commande sera traitée dès réception du chèque et confirmation de la transaction par votre banque.']

                            each icon, index in icons
                                li
                                    mixin radio-inline(descsStrong[index], descs[index], index, icon, titles[index], 'paiement')

