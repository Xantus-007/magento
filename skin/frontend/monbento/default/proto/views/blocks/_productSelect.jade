    .columns.medium-2.small-3.c-item(class=index == 0 && row == 0 ? "is-active" : "", class=index)
        - if(index==0)
            span: img(src="#{imgDir}c-img__product--150x150.png", alt="")
        - else
            a(href=""): img(src="#{imgDir}c-img__product--150x150.png", alt="")

