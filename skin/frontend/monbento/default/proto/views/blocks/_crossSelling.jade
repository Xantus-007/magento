    .c-grid__product
        .row.collapse
            include _productItem

            .columns.small-6.medium-4.large-3
                .c-item__product
                    .c-label--main
                        .c-content nouveau
                    .c-thumb
                        // format image 220x220px
                        img(src="#{imgDir}c-img__product--220x220.png", alt="")
